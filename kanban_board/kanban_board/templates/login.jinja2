{% extends "layout.jinja2" %}

{% block content %}
<div class="container mt-5">
  <h1>Tablica Kanban</h1>

  <div class="container col-md-4 justify-content-md-center mt-5">
    <h2>Logowanie</h2>
    <form action="{{action_url}}" method="POST">
      <div class="col-auto">
        <label for="form.login" class="form-label">Login</label>
        <input class="form-control" name="form.login">
      </div>
      <div class="col-auto">
          <label for="form.password" class="form-label">Hasło</label>
          <input type="password" class="form-control" name="form.password">
      </div>

      <div class="d-flex justify-content-between align-items-center">
      <button type="submit" name="form.submitted" class="btn btn-primary mt-3">Zaloguj</button>
      <a class="" href="{{request.route_url('register')}}">Zarejestruj się</a>
      </div>
    </form>

    <div class="text-danger mt-4">{{error}}</div>
  </div>

</div>
{% endblock content %}